{% extends 'base.html.twig' %}

{% block title %}Image index{% endblock %}

{% block body %}
  <h1>uploaded image index</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Id</th>
        <th>Titre</th>
        <th>Path</th>
        <th>Description</th>
        <th>actions</th>
      </tr>
    </thead>
    <tbody>
      {% for image in images %}
        <tr>
          <td>{{ image.id }}</td>
          <td>{{ image.titre }}</td>
          <td>{{ image.path }}</td>
          <td>{{ image.description }}</td>
          <td>
            <a href="{{ path('image_show', {'id': image.id}) }}">show</a>
            <a href="{{ path('image_edit', {'id': image.id}) }}">edit</a>
          </td>
        </tr>
      {% else %}
        <tr>
          <td colspan="5">no records found</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>

  <a href="{{ path('image_new') }}">Create new</a>
{% endblock %}
